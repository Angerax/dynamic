{% extends "AdminAdminBundle::layout.html.twig" %}

{% block content %}
           <!-- Page Content -->
        <div class="tab-content">
                <div id="page-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">Messages</h1>
                                <div class="col-lg-12">
                                <div class="form-group">
                            <ul>                 
                                <div class="col-md-12 postopic">  
                                {% for post in postPages %}
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                </div>
                                                <!-- /.panel-heading -->
                                                <div class="panel-body"> 
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Auteur</th>
                                                                    <th>Sujet</th>
                                                                    <th>Message</th>
                                                                    <th>Lien</th>
                                                                    <th>Embed</th>
                                                                    <th>Date</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>{{ post.id }}</td>
                                                                    <td>{{ post.usernames.username }}</td>
                                                                    <td>{{ post.topics.name }}</td>
                                                                    <td>{{ post.message }}</td>
                                                                    <td>{{ post.url }}</td>
                                                                    <td>{{ post.embed }}</td>
                                                                    <td>{{ post.date|date('d-m-Y H:m') }}
                                                                        
                                                                    </td>
                                                                    <td><div class="del">
                                                                            <a href="{{ path('admin_admin_delete', {'id': post.id, 'page': 'Post'}) }}" class="btn btn-outline btn-primary">Effacer</a>
                                                                        </div></td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                    <!-- /.table-responsive -->
                                                </div>
                                                <!-- /.panel-body -->
                                            </div>
                                            <!-- /.panel -->
                                        </div>
                                    </div>
                                {% endfor %}
                                <div class="text-center">{{ knp_pagination_render(postPages) }}</div>
                                </div>
                            </ul>
                        </div>
                                </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
            </div>

{% endblock %}