{% extends "AdminAdminBundle::layout.html.twig" %}

{% block content %}
           <!-- Page Content -->
        <div class="tab-content">
                <div id="page-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">Sujets</h1>
                                <div class="col-lg-10">
                                <div class="form-group">
                            <label>Ajouter un sujet</label>
                            {{ include("AdminAdminBundle:Form:formTopic.html.twig") }}
                            <ul>                 
                                <div class="col-md-11 postopic">  
                                {% for topic in topicPages %}
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                </div>
                                                <!-- /.panel-heading -->
                                                <div class="panel-body"> 
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Cat√©gorie</th>
                                                                    <th>Titre</th>
                                                                    <th>Tags</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>{{ topic.id }}</td>
                                                                    <td>{{ topic.categories.name }}</td>
                                                                    <td>{{ topic.Name }}</td>
                                                                    <td>{{ topic.tag }}
                                                                        <div class="del">
                                                                            <a href="{{ path('admin_admin_delete', {'id': topic.id, 'page': 'Topic'}) }}" class="btn btn-outline btn-primary">Effacer</a>
                                                                        </div>
                                                                    </td>

                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                    <!-- /.table-responsive -->
                                                </div>
                                                <!-- /.panel-body -->
                                            </div>
                                            <!-- /.panel -->
                                        </div>
                                    </div>
                                {% endfor %}
                                <div class="text-center">{{ knp_pagination_render(topicPages) }}</div>
                                </div>
                            </ul>
                        </div>
                                </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
            </div>

{% endblock %}