{% extends "AdminAdminBundle::layout.html.twig" %}
{% set page_title = 'Catégories' %}

{% block content %}
           <!-- Page Content -->
        <div class="tab-content">
                <div id="page-wrapper">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">Catégories</h1>
                                <div class="col-lg-10">
                                <div class="form-group">
                            <label>Ajouter une catégorie</label>
                            {{ include("AdminAdminBundle:Default:form.html.twig") }}
                            <ul>                 
                                <div class="col-md-11 pos">  
                                {% for category in categoriesPages %}
                                    <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body"> 
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Catégorie</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>{{ category.id }}</td>
                                            <td>{{ category.Name }}
                                                <div class="del">
                                                    <a href="{{ path('admin_admin_delete', {'id': category.id, 'page': 'Topic'}) }}" class="btn btn-outline btn-primary">Effacer</a>
                                                    </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                                        
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div> 
                                {% endfor %}
                                <div class="text-center">{{ knp_pagination_render(categoriesPages) }}</div>
                                </div>
                            </ul>
                        </div>
                                </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
            </div>

{% endblock %}