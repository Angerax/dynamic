{% extends "BootstrapThemeBundle::layout.html.twig" %}
{% set page_title = 'Categories' %}

{% block title %}

    {{ parent()}}{{ page_title }}

{% endblock %}

{% block body %}
    <section>
    <div class="font">
            <div class="row">
                <div class="col-md-12"><br/></div>
            </div>

        {% block h2 %}
            <h2>Catégories</h2>
        {% endblock %}

            <div class="col-md-2"></div>
            <div class="container col-md-6">
                <ul class="breadcrumb">
                    <li><a href="{{ path('static', {'page': 'categories'}) }}">Catégories</a></li>
{% block breadcrumbs %}
{% endblock %}
                </ul>
                
            </div>
                
                 <div class="col-md-3"></div>
                <ul>                 
                    <div class="col-md-6 pos2">  
                        {% block load %}
                        {% for category in categoriesPages %}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                            </div>
                            <div class="panel-body">
                            <div class="col-md-12 cat"> 
                                <a href="{{ path('sujets', {'cat': category.Id}) }}">
                                 <li class="text">{{ category.Name }}</li>
                                </a>
                            </div>
                            </div>
                        </div> 
                        {% endfor %}
                        <div class="text-center">{{ knp_pagination_render(categoriesPages) }}</div>
                        {% endblock %}
                    </div>
                </ul>

            <div class="col-md-1 btnfloat"></div>
            {% block aside %}
            <div class="container col-md-2 btnfloat">
                <aside>

                    <div class="suggest">
                        
                    </div>

                    <div class="row"></div>
                    <div class="col-md-12 btnfloat suggest">
                        {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                            <a href="{{ path('static', {'page': 'newart'}) }}" class="btn btn-outline btn-primary center">Créer un nouveau sujet</a>
                        {%endif%}
                        
                        {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                            <p class="txt-register">Vous devez être connecté(e) pour poster un commentaire</p>
                            <a href="{{ path ("fos_user_security_login") }}" class="btn btn-outline btn-primary center">Connexion</a>
                        {%endif%}
                    </div>
                </aside>
            </div>
            {% endblock %}
            <div class="row"></div>
        </div>
    </section>
{% endblock %}